<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<DialogPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mkcoffee.controllers.UpdateProductDialogController">
    
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Product Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="nameUpdate" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label text="Product Price" GridPane.rowIndex="2" />
         <TextField fx:id="priceUpdate" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         <Label text="Product Category" GridPane.rowIndex="3" />
         <Label text="Product Stock" GridPane.rowIndex="4" />
         <TextField fx:id="categoryUpdate" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <TextField fx:id="stockUpdate" GridPane.columnIndex="1" GridPane.rowIndex="4" />
         <Label text="Product Kind" GridPane.rowIndex="1" />
         <TextField fx:id="kindUpdate" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </content>
    
    <stylesheets>
        <URL value="@/mkcoffee/css/updateproductdialog.css" />
    </stylesheets>
   <header>
      <Label text="Update Product" />
   </header>
</DialogPane>
